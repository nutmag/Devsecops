pipeline {
  agent any 
  tools {
    maven 'Maven'
  }
  stages {
    stage ('Initialize') {
      steps {
        sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
            ''' 
      }
    }
    
     stage ('Deploy-To-Tomcat') {
            steps {
           sshagent(['tomcat']) {
             sh 'scp -o StrictHostKeyChecking=no target/*.war root@212.47.229.249:/opt/tomcat/webapps/webapp.war'
      }
    }
   }
   
